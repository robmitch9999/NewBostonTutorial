<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thelastrobmitch.newbostontutorial"
>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SET_WALLPAPER" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@android:style/Theme.Holo"
        >
        <!--This meta-data tag is required to use Google Play Services.-->
        <meta-data android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>

        <activity android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />
        <activity
            android:name=".Splash"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".startingPoint"
            android:label="@string/title_activity_starting_point"
            >
            <intent-filter>
                <action android:name="com.thelastrobmitch.newbostontutorial.STARTINGPOINT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MyMenu"
            android:label="My Menu">
            <intent-filter>
                <action android:name="com.thelastrobmitch.newbostontutorial.MYMENU" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TextPlay"
            android:label="Text Play"
            android:theme="@android:style/Theme.Material">

        </activity>
        <activity
            android:name=".Email"
            android:label="Email">

        </activity>
        <activity
            android:name=".Data"
            android:label="Data">
        </activity>
        <activity
            android:name=".OpenedClass"
            android:label="Opened Class">
        </activity>
        <activity
            android:name=".Camera"
            android:label="Camera"
            android:screenOrientation="portrait">

        </activity>
        <activity
            android:name=".AboutUs"
            android:label="About Us"
            android:theme="@android:style/Theme.Dialog">
            <intent-filter>
                <action android:name="com.thelastrobmitch.newbostontutorial.ABOUTUS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Prefs"
            android:label="Preferences"
            android:theme="@android:style/Theme.Dialog">
            <intent-filter>
                <action android:name="com.thelastrobmitch.newbostontutorial.PREFS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Graphics"
            android:label="Graphics">

        </activity>
        <activity
            android:name=".GFXSurface"
            android:label="GFXSurface"
            android:theme="@android:style/Theme.Dialog">

        </activity>
        <activity
            android:name=".SoundStuff"
            android:label="Sound Stuff">

        </activity>
        <activity
            android:name=".Slider"
            android:label="Sliding Drawer Stuff">

        </activity>
        <activity
            android:name=".Tabs"
            android:label="Tabs demo">

        </activity>
        <activity
            android:name=".SimpleBrowser"
            android:label="Simple Browser">

        </activity>
        <activity
            android:name=".Flipper"
            android:label="Flipper example">

        </activity>
        <activity
            android:name=".SharedPrefs"
            android:label="Shared Preferences Example">

        </activity>
        <activity
            android:name=".InternalData"
            android:label="Ixternal Data Example">

        </activity>
        <activity
            android:name=".ExternalData"
            android:label="External Data Example">

        </activity>
        <activity
            android:name=".SQLiteExample"
            android:label="SQL Database Example">

        </activity>
        <activity
            android:name=".SQLView"
            android:label="SQL View">
            <intent-filter>
                <action android:name="com.thelastrobmitch.newbostontutorial.SQLVIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Accelerate"
            android:label="Acceleratometer Service Example">

        </activity>
        <activity
            android:name=".ForecastFromJSON"
            android:label="HTTP Example">

        </activity>
        <activity
            android:name=".WeatherFromXML"
            android:label="XML Parsing Example">

        </activity>

        <receiver
            android:name=".PointlessWidget"
            android:label="Pointless Widget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_stuff" />
        </receiver>

        <activity android:name=".WidgetConfig">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GLExample"
            android:label="GL 3D example">
        </activity>
        <activity
            android:name=".Voice"
            android:label="Voice Recognition Demo">
        </activity>
        <activity
        android:name=".TextToVoice"
        android:label="Text to Voice Example">
        </activity>
        <activity
            android:name=".StatusBar"
            android:label="Notification &amp; Status Bar example">
        </activity>
        <activity
            android:name=".SeekBarVolume"
            android:label="Seek Bar example">
        </activity>
    </application>

</manifest>